  "license": "MIT",
  "bugs": {
    "url": "https://github.com/esoui/lexicon/issues"
  },
  "homepage": "https://github.com/esoui/lexicon#readme",
  "engines": {
    "npm": "^9",
    "node": "^20"
  },
  "dependencies": {
    "@nlpjs/basic": "^4.27.0",
    "lru-cache": "^10.2.0",
    "matrix-bot-sdk": "^0.7.1",
    "minimist": "^1.2.8",
    "rss-parser": "^3.13.0"
  },
  "devDependencies": {
    "eslint": "^8.37.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "node-dev": "^8.0.0",
    "prettier": "^3.2.5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true,
      "es2022": true
